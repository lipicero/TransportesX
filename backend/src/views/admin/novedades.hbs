<div class="container" style="margin-top: 75px">
    {{!--fila 1 --}}
    <div class="row mb-5">
        <p class="text-end">Hola {{usuario}}!
            <a href="/admin/login/logout" class="btn btn-danger">Cerrar Sesi√≥n <i class="fas fa-sign-out-alt"></i></a>
        </p>
    </div>
    {{!-- fin fila 1 --}}

    {{!-- fila 2 --}}
    <div class="row">
        <div class="col-7">
            <h2>Novedades:</h2>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success">
            <i class="fa fa-plus"></i> Nuevo</a>
        </div>
    </div>
    {{!-- fin fila 2 --}}

    {{!-- fila 3 --}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Imagen</th>
                        <th class="text-end" scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th class="align-middle" scope="row">{{id}}</th>
                        <td class="align-middle">{{titulo}}</td>
                        <td>
                            <div class="admin-imagen">{{{imagen}}}</div>
                        </td>
                        <td class="text-center justify-content-center align-middle">
                            <a href="/admin/novedades/modificar/{{id}}" title="Editar" class="btn btn-sm btn-secondary ms-1 float-end">
                                <i class="fa fa-pencil"></i>
                            </a>
                            <a href="/admin/novedades/eliminar/{{id}}" title="Eliminar" class="btn btn-sm btn-danger float-end ">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{!-- fin fila 3 --}}
</div>