<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar la novedad</h4>
            <form action="/admin/novedades/modificar" method="POST" enctype="multipart/form-data">
                <input type="hidden" name="id" value="{{novedad.id}}">
                <div class="form-group my-2">
                    <input type="text" class="form-control" id="titulo" name="titulo" value="{{novedad.titulo}}"
                        placeholder="Titulo" required>
                </div>
                <div class="form-group mb-2">
                    <textarea name="subtitulo" class="form-control" placeholder="Subtitulo"
                        required>{{novedad.subtitulo}}</textarea>
                </div>
                <div class="form-group mb-2">
                    <textarea name="cuerpo" class="form-control" placeholder="Cuerpo"
                        required>{{novedad.cuerpo}}</textarea>
                </div>
                <div class="form-group mb-2">
                    <p>
                        <label>Imagen<input class="form-control" type="file" name="imagen" id="imagen"></label>
                    </p>
                    <p>
                        <label>
                            <input type="checkbox" name="img_delete" id="img_delete" value="1">
                            Eliminar imagen actual
                        </label>
                        <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>

                {{#if error}}
                <h5>{{message}}</h5>
                {{/if}}
                <button type="submit" class="btn btn-primary" style="margin: 10px auto">Modificar</button>
            </form>
        </div>
    </div>
</div>