<div class="container" style="margin-top:100px;">
  <div class="row">
    <form action="/admin/login" method="post">
      <div class="mb-3 row">
        <div class="text-center">
          <input type="text" class="form-control d-inline-block w-50" id="inputUser" name="usuario" placeholder="Usuario" />
        </div>
      </div>
      <div class="mb-3 row">
        <div class=" text-center">
          <input type="password" class="form-control d-inline-block w-50" id="inputPassword" name="password" placeholder="Contraseña" />
        </div>
      </div>
      {{#if error}}
      <div class="alert alert-danger mx-auto w-50 text-center" role="alert">
        {{message}}
      </div>
      {{/if}}
      <div class="text-center">
        <button type="submit" class="btn btn-primary">Iniciar sesión</button>
      </div>
    </form>
  </div>
</div>